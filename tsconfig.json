{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["DOM", "ES2020", "esnext", "dom", "dom.iterable", "scripthost"]
  },
  "outDir": "dist",
  "esModuleInterop": true,
  "sourceMap": true,
  "declaration": true,
  "skipLibCheck": true,
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
